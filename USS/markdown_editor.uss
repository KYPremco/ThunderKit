#markdown-editor-window-area {
    position: absolute;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
}

#rend-area {
    position: absolute;
    top: 18px;
    right: 0px;
    bottom: 0px;
}
#text-area {
    position: absolute;
    top: 18px;
    left: 0px;
    bottom: 0px;
}

.unity-text-field TextInput {
    -unity-text-align: upper-left;
}

.markdown-renderer {
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    border-left-color: rgba(0, 0, 0, 255);
    border-right-color: rgba(0, 0, 0, 255);
    border-top-color: rgba(0, 0, 0, 255);
    border-bottom-color: rgba(0, 0, 0, 255);
    margin-left: 1px;
    margin-right: 1px;
    margin-top: 1px;
    margin-bottom: 1px;
    padding-left: 4px;
    padding-right: 4px;
    padding-top: 2px;
    padding-bottom: 2px;
}
.text-editor {
    font-size: 14;
    margin-left: 0px;
    margin-right: 3px;
    margin-top: 0px;
    margin-bottom: 2px;
}

Scroller {
    margin-top: 18px;
}
